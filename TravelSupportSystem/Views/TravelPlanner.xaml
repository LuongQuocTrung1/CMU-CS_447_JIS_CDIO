<Window x:Class="TravelSupportSystem.Views.TravelPlanner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelSupportSystem.Views"
        mc:Ignorable="d"
        Title="TravelPlanner" Height="640" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F2F5">

    <Grid>

        <!-- HEADER -->
        <Grid Height="50" Background="White" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="←"
                    FontSize="18"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="BtnHome_Click"/>

            <TextBlock Grid.Column="1"
                       Text="AI Travel Planner"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"/>
        </Grid>

        <!-- CHAT AREA -->
        <Border Margin="0,50,0,70"
                Background="#F0F2F5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ChatPanel" Margin="10"/>
            </ScrollViewer>
        </Border>

        <!-- INPUT BAR -->
        <Border Background="White"
                Height="70"
                VerticalAlignment="Bottom"
                Padding="10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="20"
        BorderBrush="#DDDDDD"
        BorderThickness="1"
        Height="40">

                    <TextBox x:Name="txtUser"
             FontSize="14"
             VerticalContentAlignment="Center"
             Padding="10"
             BorderThickness="0"
             Text="Aa"/>
                </Border>

                <Button Grid.Column="1"
                        Content="Gửi"
                        Height="40"
                        Margin="10,0,0,0"
                        Background="#2196F3"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="BtnSend_Click"/>
            </Grid>
        </Border>

    </Grid>
</Window>
