<Window x:Class="TravelSupportSystem.Views.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelSupportSystem.Views"
        mc:Ignorable="d"
        Title="DangNhap" Height="640" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#2196F3">
        <Border Background="White"
            CornerRadius="25"
            VerticalAlignment="Center"
            Margin="20">

            <StackPanel Margin="25">

                <TextBlock Text="Travel Support System"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,30"/>

                <TextBlock Text="Username"/>
                <TextBox x:Name="txtUser"
                     Height="45"
                     FontSize="14"
                     Margin="0,5,0,10"/>

                <TextBlock Text="Password"/>
                <PasswordBox x:Name="txtPass"
                         Height="45"
                         FontSize="14"
                         Margin="0,5,0,10"/>

                <Button Content="LOGIN"
                    Height="45"
                    Margin="0,20,0,0"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnLogin_Click"/>

                <TextBlock Text="Demo: admin / 123"
                       FontSize="12"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"/>
            </StackPanel>

        </Border>
    </Grid>
</Window>
