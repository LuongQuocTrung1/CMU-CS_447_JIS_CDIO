<Window x:Class="TravelSupportSystem.Views.TransportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelSupportSystem.Views"
        mc:Ignorable="d"
        Title="TransportWindow" Height="640" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#2196F3">
        <Border Background="White"
                CornerRadius="25"
                VerticalAlignment="Center"
                Margin="20">

            <StackPanel Margin="25">

                <TextBlock Text="🚗 Phương tiện di chuyển"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"/>

                <Button Content="✈️ Máy bay"
                        Height="50"
                        Margin="0,10"
                        Background="#2196F3"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnPlane_Click"/>

                <Button Content="🚌 Xe khách"
                        Height="50"
                        Margin="0,10"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnBus_Click"/>

                <Button Content="🚆 Tàu hỏa"
                        Height="50"
                        Margin="0,10"
                        Background="#FF9800"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnTrain_Click"/>

                <Button Content="⬅️ Quay lại"
                        Height="50"
                        Margin="0,30,0,0"
                        Background="#9E9E9E"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnBack_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
