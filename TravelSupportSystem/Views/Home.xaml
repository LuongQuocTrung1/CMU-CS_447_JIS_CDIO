<Window x:Class="TravelSupportSystem.Views.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelSupportSystem.Views"
        mc:Ignorable="d"
        Title="Home" Height="640" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#2196F3">
        <Border Background="White"
                CornerRadius="25"
                VerticalAlignment="Center"
                Margin="20">

            <StackPanel Margin="25">

                <TextBlock Text="🏝️ Trang chủ"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"/>

                <Button Content="🤖 Travel Planner (AI)"
                        Height="50"
                        Margin="0,10"
                        Background="#2196F3"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnPlanner_Click"/>

                <Button Content="⚙️ Cài đặt phong cách du lịch"
                        Height="50"
                        Margin="0,10"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnSettings_Click"/>

                <Button Content="🗺️ Mở Google Maps"
                        Height="50"
                        Margin="0,10"
                        Background="#FF9800"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnMap_Click"/>

                <Button Content="🚗 Phương tiện di chuyển"
                        Height="50"
                        Margin="0,10"
                        Background="#03A9F4"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnTransport_Click"/>

                <Button Content="🏨 Nơi ở"
                        Height="50"
                        Margin="0,10"
                        Background="#9C27B0"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnAccommodation_Click"/>

                <Button Content="🚪 Đăng xuất"
                        Height="50"
                        Margin="0,30,0,0"
                        Background="#F44336"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnLogout_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
