<Window x:Class="TravelSupportSystem.Views.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelSupportSystem.Views"
        mc:Ignorable="d"
        Title="Settings" Height="640" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#2196F3">
        <Border Background="White"
                CornerRadius="25"
                VerticalAlignment="Center"
                Margin="20">

            <StackPanel Margin="25">

                <TextBlock Text="⚙️ Phong cách du lịch"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"/>

                <ComboBox x:Name="cbStyle" Height="40">
                    <ComboBoxItem Content="Gia đình"/>
                    <ComboBoxItem Content="Phượt"/>
                    <ComboBoxItem Content="Nghỉ dưỡng"/>
                    <ComboBoxItem Content="Tiết kiệm"/>
                    <ComboBoxItem Content="Cao cấp"/>
                </ComboBox>

                <Button Content="Lưu cài đặt"
                        Height="45"
                        Margin="0,20"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnSave_Click"/>

                <Button Content="← Quay lại Home"
                        Height="45"
                        Background="#9E9E9E"
                        Foreground="White"
                        Click="BtnBack_Click"/>

            </StackPanel>

        </Border>
    </Grid>
</Window>
